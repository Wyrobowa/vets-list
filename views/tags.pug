extends layout

block content
    h2.title #{title}
    if (user)
        a.btn.btn-success(href=`/tags/add`) Add tag
    ul.list-group.mt-2
        each tag in tags
            li.list-group-item(id=tag._id)= tag.name
                if (admin)
                    span.js-removeTag.trash-icon.fas.fa-trash.float-right(data-id=tag._id)
